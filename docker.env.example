# Docker Environment Configuration
# Copy this file to .env for Docker deployment

# Database Configuration (used by docker-compose)
DB_NAME=user_docs
DB_USER=postgres
DB_PASSWORD=change_this_password_in_production
DB_PORT=5432

# Application Configuration
NODE_ENV=production
PORT=3000

# JWT Configuration  
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# File Upload Configuration
MAX_FILE_SIZE=10485760

# Redis Configuration (optional)
REDIS_PORT=6379

# For Production: Use strong passwords and secrets
# DB_PASSWORD=your_strong_database_password
# JWT_SECRET=your_very_secure_jwt_secret_at_least_32_characters_long

# Docker specific
COMPOSE_PROJECT_NAME=user-docs 